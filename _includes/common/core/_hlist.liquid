{%- include common/rest/site_pages.liquid -%}
{%- include common/rest/workdir.liquid -%}

{%- assign base = page.dir | append: "temp/" | split: "/" | size -%}
{%- assign size = workdir_level | minus: base -%}
{%- assign size_p1 = size | plus: 1 -%}
{%- assign workdirsize = workdir_files | size -%}

{%- assign dir = site_pages | where: "url", workdir | first %}

{% if dir.title != "Documentation home" %}
<h1 style="font-size:110%"><a href="{{ dir.url | relative_url }}">{{ dir.title | default: dir.url }}</a></h1>
{% endif %}

{%- for item in workdir_files %} &#124; <a style="font-size:85%" href="{{ item.url | relative_url }}">{{ item.title | default: item.name }}</a> {%- endfor -%}
{% if workdirsize>0 %}
&#124;
{% endif %}

{%- for workdir in workdir_dirs %}{% include common/core/_hlist.liquid %}{% endfor -%}





